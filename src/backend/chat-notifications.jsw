/**
 * Send email to user
 * @private
 */
async function sendEmailToUser(userEmail, subject, html, text) {
    try {
        // Try SendGrid first
        let sendgridKey;
        try {
            sendgridKey = await secrets.getSecret('SENDGRID_API_KEY');
        } catch (e) {
            console.warn('SendGrid not configured');
        }
        
        if (sendgridKey) {
            const response = await fetch('https://api.sendgrid.com/v3/mail/send', {
                method: 'POST',
                headers: {
                    'Authorization': `Bearer ${sendgridKey}`,
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    personalizations: [{
                        to: [{ email: userEmail }]
                    }],
                    from: { email: 'support@hingecraft-global.ai', name: 'HingeCraft Global' },
                    subject: subject,
                    content: [
                        { type: 'text/plain', value: text },
                        { type: 'text/html', value: html }
                    ]
                })
            });
            
            if (response.ok) {
                console.log('‚úÖ Chat response email sent to user via SendGrid');
                return { success: true, service: 'sendgrid' };
            } else {
                const error = await response.text();
                console.error('SendGrid error:', error);
                throw new Error('SendGrid failed');
            }
        }
        
        // Fallback: Log for manual sending
        console.warn('‚ö†Ô∏è Email service not configured. Response would be sent to:', userEmail);
        console.log('Email Subject:', subject);
        
        return { 
            success: false, 
            error: 'Email service not configured',
            service: 'none'
        };
        
    } catch (error) {
        console.error('‚ùå Email send error:', error);
        return { 
            success: false, 
            error: error.message,
            service: 'sendgrid'
        };
    }
}

/**
 * Save chat email response to database
 * @private
 */
async function saveChatEmailResponse(chatData, intentAnalysis, emailResponse, emailResult) {
    try {
        const responseId = 'chat_email_' + Date.now().toString(36) + '_' + Math.random().toString(36).substr(2, 9);
        const timestamp = new Date();
        
        const responseRecord = {
            _id: responseId,
            originalMessage: chatData.message,
            userEmail: chatData.userEmail,
            userName: chatData.userName || null,
            userId: chatData.userId || 'guest',
            sessionId: chatData.sessionId || null,
            category: intentAnalysis.category || 'general',
            intent: intentAnalysis.intent || 'question',
            emailSubject: emailResponse.subject,
            emailHtml: emailResponse.html,
            emailText: emailResponse.text,
            emailSent: emailResult.success || false,
            emailSentAt: emailResult.success ? timestamp : null,
            emailError: emailResult.error || null,
            created_at: timestamp,
            metadata: {
                intentAnalysis: intentAnalysis,
                emailService: emailResult.service || 'none',
                pageUrl: chatData.pageUrl || null
            }
        };
        
        // Save to ChatMessages collection with email response data
        await wixData.save('ChatMessages', {
            ...responseRecord,
            message: `[EMAIL RESPONSE] ${emailResponse.subject}`,
            type: 'email_response'
        });
        
        console.log('‚úÖ Chat email response saved to database:', responseId);
        
        return {
            success: true,
            responseId: responseId
        };
        
    } catch (error) {
        console.error('‚ùå Error saving chat email response:', error);
        throw error;
    }
}
