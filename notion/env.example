# Notion Integration Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real values to git

# Notion API Configuration
NOTION_TOKEN=your_notion_token_here
NOTION_PARENT_PAGE_ID=your_parent_page_id_here
NOTION_WORKSPACE_ID=your_workspace_id_here

# Database IDs (will be auto-created or set manually)
NOTION_PROJECT_DB_ID=
NOTION_TASK_DB_ID=
NOTION_DONATION_DB_ID=
NOTION_LEADS_DB_ID=
NOTION_CONTENT_DB_ID=
NOTION_TEAM_DB_ID=
NOTION_CHAT_HISTORY_DB_ID=
NOTION_TIMELINE_DB_ID=
NOTION_SYSTEM_STATUS_DB_ID=
NOTION_URLS_DB_ID=

# Data Sources
DATA_SOURCE_URL=http://localhost:8000/api
DATA_SOURCE_API_KEY=your_api_key_here
HINGECRAFT_DB_PATH=../database
CURSOR_WORKSPACE_PATH=../

# Docker Services Configuration
DOCKER_COMPOSE_PATH=../docker-compose.yml
POSTGRES_PORT=5432
REDIS_PORT=6379
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
FASTAPI_PORT=8000
NGROK_PORT=4040
PGADMIN_PORT=5050
NGINX_PORT=80
NGINX_SSL_PORT=443

# Sync Configuration
PAGE_SIZE=200
SYNC_INTERVAL=60
REALTIME_UPDATE_INTERVAL=5

# Webhook Configuration
WEBHOOK_URL=https://your-domain.com/webhooks/notion
WEBHOOK_SECRET=your_webhook_secret_here
NOTION_WEBHOOK_ID=

# Monitoring
MONITORING_ENABLED=true
MONITORING_INTERVAL=30
HEALTH_CHECK_URL=http://localhost:8000/health
DOCKER_MONITORING_ENABLED=true

# Progress Tracking
PROGRESS_UPDATE_ENABLED=true
AUTO_PROGRESS_CALCULATION=true
STATUS_UPDATE_ON_WORK=true

# File Paths
MAPPINGS_FILE=./mappings.json
LAST_CURSOR_FILE=./last_cursor.json
CHAT_HISTORY_FILE=./chat_history.json
PROGRESS_LOG_FILE=./progress_log.json
